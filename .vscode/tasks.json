{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "createScene",
            "type": "shell",
            "command": "${workspaceFolder}/scripts_dlls/dev_dlls/SceneCreator.exe",
            "args": [
                "create",
                "${input:sceneName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Scenes/"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "-j8",
                "debug",
                "DEBUG=true"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "inputs": [
        {
            "id": "sceneName",
            "type": "promptString",
            "description": "Enter the scene name",
            "default": "MainScene"
        }
    ]
}
